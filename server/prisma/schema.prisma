generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
    output   = "../node_modules/.prisma/client" // Changed to standard location

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  kode        String   @unique
  keterangan  String
  harga       Float
  status      String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}